[user]
	name = {{ git.user.name }}
	email = {{ git.user.email }}
{% if git.user.signingkey is defined %}
	signingkey = {{ git.user.signingkey }}
{% endif %}
[core]
	excludesfile = ~/.gitignore_global
	editor = vim
[diff]
	tool = vimdiff
[difftool]
	prompt = no
[merge]
	tool = vimdiff
[mergetool]
	prompt = no
[init]
	defaultBranch = main
